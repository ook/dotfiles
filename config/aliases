# Anti-nervousbreakdown
alias 'l'='ls -l'
alias 'la'='ls -la'

# Rails aliases
alias 'rss'='ruby script/server'
alias 'rsc'='ruby script/console'
alias 'rsd'='ruby script/dbconsole'

# Git aliases
alias 'ggi'='git grep -in'
alias 'gg'='git grep -n'
alias 'gs'='git status'
alias 'gc'='git commit'
alias 'gd'='git diff'

# Geek certification
alias 'sedi'='sed -E -i\'\'' # use sed inplace with extended regexp
